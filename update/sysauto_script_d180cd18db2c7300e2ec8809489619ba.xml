        <script><![CDATA[var later = new GlideDateTime();
var now = new GlideDateTime();
var timeadd = new GlideTime();
timeadd.setValue("24:00:00");
later.add(timeadd);
later = new GlideDateTime(later);

var rec = new GlideRecord('x_58872_needit_needit_task');
rec.addQuery('due_date', '>=', now);
rec.addQuery('due_date', '<=', later);
rec.addQuery('state', '!=', 3);
rec.query();

while(rec.next()){
		gs.info("Overdue KD Task record = " + rec.number);
		gs.eventQueue('x_58872_needit.dueSoonNeedItTasks',rec,rec.number,gs.getUserName());
	}]]></script>
